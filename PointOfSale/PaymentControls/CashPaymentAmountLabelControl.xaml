<UserControl x:Class="DinoDiner.PointOfSale.PaymentControls.CashPaymentAmountLabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale.PaymentControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="1" Grid.ColumnSpan="3">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center">From</TextBlock>
                <TextBlock HorizontalAlignment="Center">Customer</TextBlock>
            </StackPanel>
        </Viewbox>

        <Viewbox Grid.Column="4">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center">Give as</TextBlock>
                <TextBlock HorizontalAlignment="Center">Change</TextBlock>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
