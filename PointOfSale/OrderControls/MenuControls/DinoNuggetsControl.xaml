<UserControl x:Class="DinoDiner.PointOfSale.MenuControls.DinoNuggetsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale.MenuControls"
             mc:Ignorable="d" 
             d:DesignHeight="648" d:DesignWidth="810">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Center">
            <ContentControl FontWeight="Bold">Dino Nuggets</ContentControl>
        </Viewbox>
        <local:DinoNuggetsCountControl Grid.Row="1" x:Name="NuggetsCounter"></local:DinoNuggetsCountControl>
    </Grid>
</UserControl>
