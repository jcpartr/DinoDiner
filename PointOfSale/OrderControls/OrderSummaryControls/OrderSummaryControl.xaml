<UserControl x:Class="DinoDiner.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="270">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:OrderSummaryHeaderControl x:Name="Header" Grid.Row="0"></local:OrderSummaryHeaderControl>
        <local:OrderSummaryListControl x:Name="List" Grid.Row="1"></local:OrderSummaryListControl>
        <local:OrderSummaryTotalControl x:Name="Total" Grid.Row="2"></local:OrderSummaryTotalControl>
    </Grid>

</UserControl>
